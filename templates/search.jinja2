{% extends "base.jinja2" %}
  {% block ngApp %} ng-app="FileSearch" {% endblock %}
  {% block ngController %} ng-controller="FileSearchController" {% endblock %}
  {% block body %}
    <div id="search-bar-container"> 
      <div class="container section">
	<form role="form" ng-submit="getResults()">
	  <div class="form-group eight columns">
	    <input type="text" name="query" class="form-control" placeholder="Find file..." style="width: 100%" ng-model="query">
	  </div>
	  <div class="four columns">
	    <button type="submit" class="btn btn-default" style="width: 100%">Search</button>
	  </div>
	</form>
      </div>
    </div>
    <div class="container section" id="search-result-container">
      {% raw %}
      <div class="row" ng-repeat="file in matchingFiles">
	<a class="file-link" href="/static/{{ file[2] }}" target="_blank"><h4 class="file-title"> {{ file[0] }} </a></h4>
	<p class="file-category"> {{ file[1] }} </p>
      </div>
      {% endraw %}
    </div>
  {% endblock %}

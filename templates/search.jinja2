{% extends "base.jinja2" %}
{% block pageTitle %} search {% endblock %}
{% block ngApp %} ng-app="FileSearch" {% endblock %}
{% block ngController %} ng-controller="FileSearchController" {% endblock %}
{% block body %}
<div id="search-bar-container">
  <div class="container section">
    <form role="form" ng-submit="getResults()">
      <div class="form-group eight columns">
	<input type="text" name="query" class="form-control" placeholder="Find file..." style="width: 100%" ng-model="query">
      </div>
      <div class="four columns">
	<button type="submit" class="btn btn-default" style="width: 100%">Search</button>
      </div>
    </form>
  </div>
</div>
<div class="container section" id="search-result-container">
  {% raw %}
  <div class="row search-result-item" ng-repeat="file in matchingFiles">
    <div class="ten columns">
      <span class="category-title">{{ file[3] }}</span>
      <a class="file-link" href="/uploads/{{ file[2] }}" target="_blank"><h4 class="file-title"> {{ file[0] }} </h4></a>
      <p class="file-tags"> {{ file[1] }} </p>
    </div>
    <div class="two columns" style="float: right">
      <span class="file-edit"><a href="/edit/{{ file[4] }}">edit</a></span>
    </div>
  </div>
  {% endraw %}
</div>
{% endblock %}

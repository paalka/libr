{% extends "base.jinja2" %}
{% block pageTitle %} search {% endblock %}
{% block body %}
<div id="search-bar-container">
  <div class="container section">
    <form role="form">
      <div class="form-group eight columns">
	<input type="text" name="query" id="search-field" class="form-control" placeholder="Find file..." style="width: 100%">
      </div>
      <div class="four columns">
	<button type="submit" class="btn btn-default" id="search-button" style="width: 100%">Search</button>
      </div>
    </form>
  </div>
</div>
<div class="container section" id="search-result-container">
  {% for file in newest_files %}
  <div class="row search-result-item">
    <div class="ten columns">
      <span class="category-title">{{ file[4] }}</span>
      <a class="file-link" href="/uploads/{{ file[3] }}" target="_blank"><h4 class="file-title"> {{ file[1] }} </h4></a>
      <p class="file-tags"> {{ file[2] }} </p>
    </div>
    <div class="two columns" style="float: right">
      <span class="file-edit"><a href="/edit/{{ file[0] }}">edit</a></span>
    </div>
  </div>
  {% endfor %}
</div>
{% endblock %}

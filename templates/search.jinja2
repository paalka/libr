{% extends "base.jinja2" %}
{% block pageTitle %} search {% endblock %}
{% block body %}
<div id="search-bar-container">
  <div class="container section">
    <form role="form">
      <div class="form-group eight columns">
	<input type="text" name="query" id="search-field" class="form-control" placeholder="Find file..." style="width: 100%">
      </div>
      <div class="four columns">
	<button type="submit" class="btn btn-default" id="search-button" style="width: 100%">Search</button>
      </div>
    </form>
  </div>
</div>
<div class="container section" id="search-result-container">
     {% include 'search_results.jinja2' %}
</div>
{% endblock %}
